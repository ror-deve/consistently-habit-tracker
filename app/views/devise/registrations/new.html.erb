<div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-green-100 to-blue-100">
  <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-bold text-center text-green-600 mb-6">Create an Account</h2>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4", local: true do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-green-500 focus:border-green-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-green-500 focus:border-green-500" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, class: "mt-1 block w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-green-500 focus:border-green-500" %>
      </div>

      <%= f.submit "Sign up", class: "w-full py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition" %>
    <% end %>

    <div class="text-sm text-center mt-4">
      <%= link_to "Already have an account? Log in", new_user_session_path, class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
