<%= form_with(model: habit, local: true, class: "bg-gray-50 border border-gray-300 p-6 rounded-lg shadow-md") do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-900 font-semibold mb-2" %>
    <%= form.text_field :name, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-green-500",
          placeholder: "Enter habit name" %>
    <% if habit.errors[:name].any? %>
      <p class="text-red-600 text-sm mt-1"><%= habit.errors[:name].first %></p>
    <% end %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: "block text-gray-900 font-semibold mb-2" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md resize-none focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500", placeholder: "Describe your habit..." %>
  </div>
  <div>
    <%= form.submit class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-md shadow-md transition duration-300" %>
  </div>
<% end %>
